<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Recipe Book</h1>
    <hr>
    <% if @recipes.any? %>
      <% @recipes.each do |recipe| %>
        <h4>
          <%= recipe.name %>
          <span class="pull-right">
            <%= link_to "View Recipe", recipe_path(recipe), class: "btn btn-default pull-right" %>
          </span>
        </h4>
        <p><%= recipe.instructions %></p>
        <hr>
      <% end %>
    <% else %>
      <p>No recipes yet!</p>
      <hr>
    <% end %>

    <% if current_user %>
      <%= link_to "Add New Recipe", new_recipe_path, class: "btn btn-default" %>
    <% end %>
  </div>
</div>