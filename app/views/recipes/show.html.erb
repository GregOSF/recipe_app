<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1><%= @recipe.name %></h1>
    <hr>
    <p><%= @recipe.instructions %></p>
    <% if current_user && current_user.recipes.include?(@recipe) %>
      <hr>
      <%= link_to "Edit Recipe", edit_recipe_path(@recipe), class: "btn btn-default" %>
      <%= link_to "Delete Recipe", recipe_path(@recipe), method: :delete, class: "btn btn-default" %>
    <% end %>
  </div>
</div>